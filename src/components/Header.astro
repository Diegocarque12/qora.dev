<header
  class='fixed top-0 left-0 right-0 bg-white z-40 flex justify-between items-center py-4 px-6 md:px-8 shadow-sm'
>
  <h1 class='font-semibold text-2xl sm:text-3xl'><a href="/">Qora.dev</a></h1>

  <button
    id='menu-toggle'
    class='lg:hidden focus:outline-none hover:opacity-75 transition-opacity'
  >
    <svg
      class='w-7 h-7'
      fill='none'
      stroke='currentColor'
      viewBox='0 0 24 24'
      xmlns='http://www.w3.org/2000/svg'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        stroke-width='2'
        d='M4 6h16M4 12h16m-7 6h7'></path>
    </svg>
  </button>
  <nav
    id='mobile-menu'
    class='hidden lg:flex lg:relative lg:flex-row lg:bg-transparent lg:inset-auto lg:space-y-0 fixed inset-0 bg-white/95 backdrop-blur-sm z-50 items-center justify-center transition-all duration-300 ease-in-out'
  >
    <button
      id='close-menu'
      class='absolute top-6 right-6 lg:hidden focus:outline-none hover:opacity-75 transition-opacity'
    >
      <svg
        class='w-7 h-7'
        fill='none'
        stroke='currentColor'
        viewBox='0 0 24 24'
        xmlns='http://www.w3.org/2000/svg'
      >
        <path
          stroke-linecap='round'
          stroke-linejoin='round'
          stroke-width='2'
          d='M6 18L18 6M6 6l12 12'></path>
      </svg>
    </button>

    {Astro.url.pathname === '/' ? (
      <a href='#hero' class='text-2xl font-medium hover:text-gray-600 transition-colors lg:text-base lg:mx-4'>Home</a>
      <a href='#services' class='text-2xl font-medium hover:text-gray-600 transition-colors lg:text-base lg:mx-4'>Services</a>
      <a href='#projects' class='text-2xl font-medium hover:text-gray-600 transition-colors lg:text-base lg:mx-4'>Projects</a>
      <a href='#about' class='text-2xl font-medium hover:text-gray-600 transition-colors lg:text-base lg:mx-4'>About</a>
      <a href='#contact' class='text-2xl font-medium hover:text-gray-600 transition-colors lg:text-base lg:mx-4'>Contact us</a>
    ) : (
      <a href='/' class='text-2xl font-medium hover:text-gray-600 transition-colors lg:text-base lg:mx-4'>Home</a>
      <a href='/#services' class='text-2xl font-medium hover:text-gray-600 transition-colors lg:text-base lg:mx-4'>Services</a>
      <a href='/#projects' class='text-2xl font-medium hover:text-gray-600 transition-colors lg:text-base lg:mx-4'>Projects</a>
      <a href='/#about' class='text-2xl font-medium hover:text-gray-600 transition-colors lg:text-base lg:mx-4'>About</a>
      <a href='/#contact' class='text-2xl font-medium hover:text-gray-600 transition-colors lg:text-base lg:mx-4'>Contact us</a>
    )}
  </nav>

  <div>

    <a href='/blog'
    class='hidden lg:inline-block text-black px-5 py-2.5 hover:bg-gray-800 hover:text-white transition-colors rounded-md font-medium'
    >Blog</a
    >
    <a href='#'
    class='hidden lg:inline-block bg-black text-white px-5 py-2.5 hover:bg-gray-800 transition-colors rounded-md font-medium'
    >Let's Talk</a
    >
  </div>
</header>
<div class='h-20'></div>

<script>
  import { initMenu } from "@/scripts/menu.js";
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", initMenu);
  } else {
    initMenu();
  }
</script>
