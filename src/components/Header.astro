---
// src/components/Header.astro
import { initMenu } from '../scripts/menu.js';
---
<header class="flex justify-between items-center py-5 container lg:mx-auto">
    <h1 class="font-semibold text-2xl sm:text-3xl">Qora</h1>
    
    <button id="menu-toggle" class="lg:hidden">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  
    <nav id="mobile-menu" class="hidden fixed inset-0 bg-white z-50 flex flex-col items-center justify-center lg:relative lg:flex lg:flex-row lg:bg-transparent lg:inset-auto">
      <button id="close-menu" class="absolute top-5 right-5 lg:hidden">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      <a href="/" class="text-2xl my-2 lg:text-base lg:my-0 lg:mx-3">Home</a>
      <a href="/about" class="text-2xl my-2 lg:text-base lg:my-0 lg:mx-3">About</a>
      <a href="/projects" class="text-2xl my-2 lg:text-base lg:my-0 lg:mx-3">Projects</a>
      <a href="/contact" class="text-2xl my-2 lg:text-base lg:my-0 lg:mx-3">Contact us</a>
    </nav>
  
    <a href="#" class="hidden lg:inline-block">Let's Talk</a>
  </header>
<hr>

<script>
    console.log('Script in Header.astro is running');
    import { initMenu } from '../scripts/menu.js';
    
    // Ejecuta initMenu inmediatamente si el DOM ya est√° listo
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMenu);
    } else {
        initMenu();
    }
</script>



