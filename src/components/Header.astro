---
// src/components/Header.astro
import { initMenu } from '../scripts/menu.js';
---
<header class="flex justify-between items-center py-5 px-4 sm:px-6 md:px-8 lg:w-[1024px] lg:mx-auto">
    <h1 class="font-semibold text-2xl sm:text-3xl">202Labs</h1>
    
    <button id="menu-toggle" class="lg:hidden">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
      </svg>
    </button>
  
    <nav id="mobile-menu" class="hidden fixed inset-0 bg-white z-50 flex flex-col items-center justify-center lg:relative lg:flex lg:flex-row lg:bg-transparent lg:inset-auto">
      <button id="close-menu" class="absolute top-5 right-5 lg:hidden">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
      <a href="/" class="text-2xl my-2 lg:text-base lg:my-0 lg:mx-3">Home</a>
      <a href="/about" class="text-2xl my-2 lg:text-base lg:my-0 lg:mx-3">About</a>
      <a href="/projects" class="text-2xl my-2 lg:text-base lg:my-0 lg:mx-3">Projects</a>
      <a href="/contact" class="text-2xl my-2 lg:text-base lg:my-0 lg:mx-3">Contact us</a>
    </nav>
  
    <a href="#" class="hidden lg:inline-block">Let's Talk</a>
  </header>
<hr>

<script>
    console.log('Script in Header.astro is running');
    import { initMenu } from '../scripts/menu.js';
    
    // Ejecuta initMenu inmediatamente si el DOM ya est√° listo
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initMenu);
    } else {
        initMenu();
    }
</script>

<style>
    .hero-background {
        position: absolute;
        top: 0;
        right: 0;
        width: 50%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        transform: skew(-12deg);
        transform-origin: top right;
        overflow: hidden;
    }

    .stars {
        background-image: 
            radial-gradient(2px 2px at 20px 30px, #eee, rgba(0,0,0,0)),
            radial-gradient(2px 2px at 40px 70px, #fff, rgba(0,0,0,0)),
            radial-gradient(2px 2px at 50px 160px, #ddd, rgba(0,0,0,0)),
            radial-gradient(2px 2px at 90px 40px, #fff, rgba(0,0,0,0)),
            radial-gradient(2px 2px at 130px 80px, #fff, rgba(0,0,0,0)),
            radial-gradient(2px 2px at 160px 120px, #ddd, rgba(0,0,0,0));
        background-repeat: repeat;
        background-size: 200px 200px;
        animation: twinkle 5s infinite;
    }

    @keyframes twinkle {
        0% { opacity: 0.5; }
        50% { opacity: 1; }
        100% { opacity: 0.5; }
    }

    .shooting-star {
        position: absolute;
        height: 2px;
        background: linear-gradient(-45deg, #5f91ff, rgba(0, 0, 255, 0));
        border-radius: 999px;
        filter: drop-shadow(0 0 6px #699bff);
        animation: tail 3s ease-in-out infinite, shooting 3s ease-in-out infinite;
    }

    .shooting-star:nth-child(1) {
        left: 0;
        top: 20%;
    }

    .shooting-star:nth-child(2) {
        left: 20%;
        top: 60%;
        animation-delay: 1s;
    }

    .shooting-star:nth-child(3) {
        right: 20%;
        top: 30%;
        animation-delay: 1.5s;
    }

    .shooting-star:nth-child(4) {
        right: 0;
        bottom: 20%;
        animation-delay: 2s;
    }

    @keyframes tail {
        0% { width: 0; }
        30% { width: 100px; }
        100% { width: 0; }
    }

    @keyframes shooting {
        0% { transform: translateX(0); }
        100% { transform: translateX(300px); }
    }

    @media (max-width: 640px) {
        .hero {
            text-align: center;
        }
        
        .hero h1 {
            font-size: 2.5rem;
        }
        
        .hero p {
            font-size: 1.125rem;
        }
    }
</style>

