<script>
  const listItems = document.querySelectorAll<HTMLElement>("li[data-project]");
  const images = document.querySelectorAll(".bg-muted img");
  const defaultImage = document.getElementById("default-image");
  let isFirstInteraction = true;
  let lastActiveProject: string | null = null;

  // Show first project by default only on initial load
  const firstProject = listItems[0];
  if (firstProject?.dataset.project) {
    showImage(firstProject.dataset.project);
    firstProject.classList.add("text-white", "scale-110");
  }

  function showImage(projectType: string) {
    images.forEach((img) => img.classList.add("hidden"));
    listItems.forEach((item) => {
      item.classList.remove("text-white", "scale-110");
    });
    const targetImage = document.getElementById(`${projectType}-image`);
    if (targetImage) {
      targetImage.classList.remove("hidden");

      const activeItem = document.querySelector(
        `li[data-project="${projectType}"]`
      );
      activeItem?.classList.add("text-white", "scale-110");

      if (!isFirstInteraction) {
        lastActiveProject = projectType;
      }
    }
  }

  listItems.forEach((item) => {
    item.addEventListener("mouseenter", () => {
      isFirstInteraction = false;
      if (item.dataset.project) {
        showImage(item.dataset.project);
      }
    });
  });

  const ulElement = document.querySelector("ul");
  if (ulElement) {
    ulElement.addEventListener("mouseleave", () => {
      if (lastActiveProject) {
        showImage(lastActiveProject);
      }
    });
  }
</script>
