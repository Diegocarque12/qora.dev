---
import Card from "@/composables/Card.astro";

const services = [
  {
    category: "Marketing Websites",
    title: "Web Design & Development",
    description:
      "Expert web development services delivering high-performance, SEO-optimized websites with responsive design and accessibility standards. We create stunning, user-friendly digital experiences that ensure your business stands out online while reaching the widest possible audience across all devices.",
    img: "/web-solutions.svg",
    link: "/marketing-websites",
  },
  {
    category: "Web Applications",
    title: "Custom SaaS Development",
    description:
      "Specialized in building scalable web applications and SaaS solutions that drive business growth. From enterprise software to commercial platforms, we transform your ideas into powerful, market-ready applications with robust features, secure architecture, and seamless user experience.",
    img: "/digital-marketing.svg",
    link: "/web-applications",
  },
];
---

<section
  class='bg-background text-foreground pt-8 lg:pt-24 pb-16'
  data-aos='fade-up'
>
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center'>
    <h2 class='text-3xl font-extrabold mb-16'>Our Best Services</h2>
    <div class='flex flex-wrap gap-8 justify-center'>
      {
        services.map((service) => (
          <Card
            category={service.category}
            title={service.title}
            description={service.description}
            img={service.img}
            link={service.link}
          />
        ))
      }
    </div>
    <a
      href='/all-services'
      class='bg-black w-60 hover:bg-white hover:text-black text-white px-6 py-2 mt-24 flex items-center justify-center mx-auto transition-colors duration-300 ease-in-out hover:shadow-lg'
    >
      All Services
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-5 w-5 ml-2'
        viewBox='0 0 20 20'
        fill='none'
        stroke='currentColor'
        stroke-width='1'
      >
        <path d='M5 10h10' stroke-linecap='round' stroke-linejoin='round'
        ></path>
      </svg>
    </a>
  </div>
</section>
