---
import { Image } from 'astro:assets';

const brands = [
  { name: 'Brand 1', logo: '/public/brands/google.svg' },
  { name: 'Brand 2', logo: '/public/brands/comair.svg' },
  { name: 'Brand 3', logo: '/public/brands/microsoft.svg' },
  // Add more brands as needed
];
---

<div class="brands-carousel">
  <div class="carousel-container">
    <div class="carousel-track">
      {brands.map((brand) => (
        <div class="carousel-item">
          <Image src={brand.logo} alt={brand.name} width={150} height={100} />
        </div>
      ))}
    </div>
  </div>
</div>

<style>
  .brands-carousel {
    overflow: hidden;
    padding: 40px 0;
    background-color: #f5f5f5;
  }

  .carousel-container {
    position: relative;
    overflow: hidden;
  }

  .carousel-track {
    display: flex;
    animation: scroll 10s linear infinite;
  }

  .carousel-item {
    flex: 0 0 auto;
    margin: 0 20px;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>


