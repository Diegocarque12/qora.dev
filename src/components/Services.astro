---
import Card from "./Card.astro";

const services = [
  {
    category: "Web Solutions",
    title: "Web Design And Development",
    description:
      "Custom websites tailored to your unique business needs, featuring responsive design, seamless functionality, and optimized performance to enhance your online presence and drive user engagement.",
    img: "/web-solutions.svg",
  },
  {
    category: "Digital Marketing",
    title: "Creative Digital Agency",
    description:
      "Strategically crafted, conversion-focused landing pages that captivate your audience, effectively communicate your value proposition, and drive measurable results through optimized content and compelling call-to-actions.",
    img: "/digital-marketing.svg",
  },
];
---

<section class='bg-background text-foreground pt-24 pb-16'>
  <div class='max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center'>
    <h2 class='text-3xl font-extrabold mb-16'>Our Best Services</h2>
    <div class='flex flex-wrap gap-8 justify-center'>
      {
        services.map((service) => (
          <Card
            category={service.category}
            title={service.title}
            description={service.description}
            img={service.img}
          />
        ))
      }
    </div>
    <button
      class='bg-black text-white px-6 py-2 mt-24 flex items-center justify-center mx-auto'
    >
      All Services
      <svg
        xmlns='http://www.w3.org/2000/svg'
        class='h-5 w-5 ml-2'
        viewBox='0 0 20 20'
        fill='none'
        stroke='currentColor'
        stroke-width='1'
      >
        <path d='M5 10h10' stroke-linecap='round' stroke-linejoin='round'
        ></path>
      </svg>
    </button>
  </div>
</section>
