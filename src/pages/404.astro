---
import GoHomeButton from "../components/buttons/GoHome.astro";
import FooterLayout from "../layouts/FooterLayout.astro";
---

<FooterLayout title='404 - Page Not Found'>
  <main
    class='flex flex-col items-center justify-center bg-white text-black h-full'
  >
    <div class='max-w-2xl w-full px-4'>
      <div class='relative overflow-hidden'>
        <svg
          width='100%'
          height='100%'
          viewBox='0 0 600 400'
          fill='none'
          xmlns='http://www.w3.org/2000/svg'
          class='absolute top-0 left-0 z-0 opacity-10'
        >
          <path d='M0 0H600V300L500 400H0V0Z' stroke='#000000' stroke-width='2'
          ></path>
          <path
            d='M100 100H500V250L450 300H100V100Z'
            stroke='#000000'
            stroke-width='2'></path>
          <path
            d='M200 200H400V275L375 300H200V200Z'
            stroke='#000000'
            stroke-width='2'></path>
        </svg>

        <div class='relative z-10 py-24 px-8 text-center'>
          <h1 class='text-9xl font-extrabold mb-8'>404</h1>
          <p class='text-2xl mb-12'>
            Oops! The page you're looking for doesn't exist.
          </p>
          <GoHomeButton />
        </div>
      </div>
    </div>
  </main>
</FooterLayout>

<style>
  main {
    font-family: "Onest Variable", system-ui, sans-serif;
  }

  h1 {
    text-shadow: 4px 4px 0px rgba(0, 0, 0, 0.1);
  }

  a:hover {
    box-shadow:
      0 10px 15px -3px rgba(0, 0, 0, 0.1),
      0 4px 6px -2px rgba(0, 0, 0, 0.05);
  }
</style>
