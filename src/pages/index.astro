---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Projects from '../components/Projects.astro';
import Brands from '../components/Brands.astro';


const services = [
  { title: 'Web Development', description: 'Custom websites tailored to your needs' },
  { title: 'Mobile Apps', description: 'Native and cross-platform mobile applications' },
  { title: 'UI/UX Design', description: 'Intuitive and attractive user interfaces' },
  { title: 'Cloud Solutions', description: 'Scalable and secure cloud infrastructure' },
];

const projects = [
  { title: 'E-commerce Platform', image: 'https://plus.unsplash.com/premium_photo-1683262038148-2ac280407276?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' },
  { title: 'Fitness Tracking App', image: 'https://plus.unsplash.com/premium_photo-1681433383783-661b519b154a?q=80&w=2060&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' },
  { title: 'Corporate Website Redesign', image: 'https://images.unsplash.com/photo-1690228254548-31ef53e40cd1?q=80&w=2071&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' },
  { title: 'IoT Dashboard', image: 'https://plus.unsplash.com/premium_photo-1719933739393-6086c1bfa4cc?q=80&w=1932&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' },
];
---

<Layout title="202Labs">
  <main class="container mx-auto px-4 sm:px-6 lg:px-8">
    <section class="services py-10 sm:py-20">
		<h2 class="text-3xl sm:text-4xl font-semibold mb-8 text-center">Our Services</h2>
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
			{services.map((service) => (
			<Card title={service.title} description={service.description} />
			))}
		</div>
	</section>

    <section class="projects py-10 sm:py-20">
      <h2 class="text-3xl sm:text-4xl font-semibold mb-8 text-center">Projects</h2>
      <Projects />
    </section>
	
	<section class="contact py-10 sm:py-20">
		<h2 class="text-3xl sm:text-4xl font-semibold mb-8 text-center">Contact Us</h2>
		<form class="max-w-lg mx-auto">
		  <div class="mb-6">
			<label for="name" class="block text-sm font-medium text-gray-700 mb-2">Name</label>
			<input type="text" id="name" name="name" class="w-full px-4 py-2 bg-gray-100 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required>
		  </div>
		  <div class="mb-6">
			<label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email</label>
			<input type="email" id="email" name="email" class="w-full px-4 py-2 bg-gray-100 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required>
		  </div>
		  <div class="mb-6">
			<label for="message" class="block text-sm font-medium text-gray-700 mb-2">Message</label>
			<textarea id="message" name="message" rows="4" class="w-full px-4 py-2 bg-gray-100 border border-gray-300 rounded-md focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" required></textarea>
		  </div>
		  <div class="text-center">
			<button type="submit" class="px-6 py-3 bg-indigo-600 text-white font-medium rounded-md shadow-lg hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition duration-300">
			  Send Message
			</button>
		  </div>
		</form>
	  </section>

	  
	</main>
	<section class="brands">
	  <h2 class="text-3xl sm:text-4xl font-semibold mb-8 text-center">More than 4k+ Trusted Partner</h2>
	  <Brands />
	</section>
</Layout>

<style>
  .card {
    @apply bg-white p-6 rounded-lg shadow-md transition-transform duration-300 hover:scale-105;
  }
</style>